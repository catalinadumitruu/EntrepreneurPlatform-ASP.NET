@model IEnumerable<Post>

@{
    ViewData["Title"] = "User";
    ViewBag.Title = "All Posts";
    Layout = "_UserLayout";
}

<h1>Hello, user! These ARE YOUR POSTS</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Add Post</a>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Title</th>
        <th class="text-right">Category</th>
        <th class="text-right">Posting date and time</th>
        <th class="text-center">Content</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var post in Model)
    {
        @if (post.UserEmail == ViewBag.CurrentUserEmail)
        {
            <partial name="MyPostsSummary" model="post" />
        }
    }
</table>

<a asp-action="Index" class="btn btn-secondary">Back to all posts</a>