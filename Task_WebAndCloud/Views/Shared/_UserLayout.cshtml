@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">Entrepreneur's network</span>
        <a asp-action="MyPosts" class="navbar-brand ml-2 btn btn-warning" value="My Posts">Manage your posts</a>
        <form id="logoutForm" class="navbar-brand form-inline" asp-antiforgery="true" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="navbar-brand btn btn-secondary">Logout</button>
        </form>
    </div>
    <div class="row m-1 p-1">
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>