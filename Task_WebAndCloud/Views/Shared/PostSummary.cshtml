@model Post
  
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h3>
            @Model.Title
            <span class="badge badge-pill badge-primary align-middle" style="float:right">
                <small>Category: @Model.Category,   @Model.PostingDate</small>
            </span>
        </h3>
    </div>
    <div class="card-text p-1">@Model.Content</div>
    <small>Posted by @Model.UserEmail</small>
</div>
